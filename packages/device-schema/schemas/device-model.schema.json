{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://iotix.io/schemas/device-model.schema.json",
  "title": "IoT Device Model",
  "description": "Schema for defining virtual IoT device models in iotix",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the device model",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the device model",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "description": "Optional description of the device model"
    },
    "version": {
      "type": "string",
      "description": "Version of the device model",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "type": {
      "type": "string",
      "description": "Type of IoT device",
      "enum": ["sensor", "gateway", "actuator", "custom"]
    },
    "protocol": {
      "type": "string",
      "description": "Primary communication protocol",
      "enum": ["mqtt", "coap", "http"]
    },
    "connection": {
      "$ref": "#/definitions/connection"
    },
    "telemetry": {
      "type": "array",
      "description": "Telemetry attributes generated by the device",
      "items": {
        "$ref": "#/definitions/telemetryAttribute"
      }
    },
    "commands": {
      "type": "array",
      "description": "Commands the device can receive",
      "items": {
        "$ref": "#/definitions/command"
      }
    },
    "behaviors": {
      "type": "array",
      "description": "Device behaviors and state machine definitions",
      "items": {
        "$ref": "#/definitions/behavior"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the device model",
      "additionalProperties": true
    }
  },
  "required": ["id", "name", "type", "protocol"],
  "additionalProperties": false,
  "definitions": {
    "connection": {
      "type": "object",
      "description": "Connection settings for the device",
      "properties": {
        "broker": {
          "type": "string",
          "description": "Broker hostname or IP address"
        },
        "port": {
          "type": "integer",
          "description": "Broker port number",
          "minimum": 1,
          "maximum": 65535
        },
        "tls": {
          "type": "boolean",
          "description": "Enable TLS/SSL encryption",
          "default": false
        },
        "clientIdPattern": {
          "type": "string",
          "description": "Pattern for generating client IDs (supports ${deviceId}, ${timestamp})",
          "default": "iotix-${deviceId}"
        },
        "topicPattern": {
          "type": "string",
          "description": "Topic pattern for publishing (supports ${deviceId}, ${attribute})"
        },
        "qos": {
          "type": "integer",
          "description": "Quality of Service level for MQTT",
          "minimum": 0,
          "maximum": 2,
          "default": 1
        },
        "keepAlive": {
          "type": "integer",
          "description": "Keep-alive interval in seconds",
          "minimum": 0,
          "default": 60
        },
        "cleanSession": {
          "type": "boolean",
          "description": "Clean session flag for MQTT",
          "default": true
        },
        "username": {
          "type": "string",
          "description": "Authentication username"
        },
        "passwordRef": {
          "type": "string",
          "description": "Reference to password in secrets store"
        }
      },
      "additionalProperties": false
    },
    "telemetryAttribute": {
      "type": "object",
      "description": "Definition of a telemetry attribute",
      "properties": {
        "name": {
          "type": "string",
          "description": "Attribute name",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
        },
        "type": {
          "type": "string",
          "description": "Data type of the attribute",
          "enum": ["number", "integer", "boolean", "string", "binary", "object", "array"]
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement (e.g., 'celsius', 'percent', 'meters')"
        },
        "generator": {
          "$ref": "#/definitions/generator"
        },
        "intervalMs": {
          "type": "integer",
          "description": "Interval between telemetry transmissions in milliseconds",
          "minimum": 100,
          "default": 1000
        },
        "topic": {
          "type": "string",
          "description": "Override topic for this attribute"
        }
      },
      "required": ["name", "type", "generator"],
      "additionalProperties": false
    },
    "generator": {
      "type": "object",
      "description": "Value generator configuration",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of value generator",
          "enum": ["random", "sequence", "replay", "constant", "custom"]
        },
        "min": {
          "type": "number",
          "description": "Minimum value for random generator"
        },
        "max": {
          "type": "number",
          "description": "Maximum value for random generator"
        },
        "distribution": {
          "type": "string",
          "description": "Statistical distribution for random generator",
          "enum": ["uniform", "normal", "exponential"],
          "default": "uniform"
        },
        "mean": {
          "type": "number",
          "description": "Mean value for normal distribution"
        },
        "stddev": {
          "type": "number",
          "description": "Standard deviation for normal distribution"
        },
        "rate": {
          "type": "number",
          "description": "Rate parameter for exponential distribution"
        },
        "start": {
          "type": "number",
          "description": "Starting value for sequence generator"
        },
        "step": {
          "type": "number",
          "description": "Step value for sequence generator",
          "default": 1
        },
        "wrap": {
          "type": "boolean",
          "description": "Wrap sequence at max value",
          "default": false
        },
        "value": {
          "description": "Constant value"
        },
        "dataFile": {
          "type": "string",
          "description": "Path to data file for replay generator"
        },
        "loopReplay": {
          "type": "boolean",
          "description": "Loop replay data when exhausted",
          "default": true
        },
        "handler": {
          "type": "string",
          "description": "Python module path for custom generator"
        },
        "params": {
          "type": "object",
          "description": "Additional parameters for custom generator",
          "additionalProperties": true
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "command": {
      "type": "object",
      "description": "Command the device can receive and process",
      "properties": {
        "name": {
          "type": "string",
          "description": "Command name",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
        },
        "topic": {
          "type": "string",
          "description": "Topic to subscribe for this command"
        },
        "parameters": {
          "type": "array",
          "description": "Command parameters",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["number", "integer", "boolean", "string", "object"]
              },
              "required": {
                "type": "boolean",
                "default": false
              }
            },
            "required": ["name", "type"]
          }
        },
        "handler": {
          "type": "string",
          "description": "Python module path for command handler"
        },
        "response": {
          "type": "object",
          "description": "Response configuration",
          "properties": {
            "topic": {
              "type": "string"
            },
            "template": {
              "type": "object"
            }
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "behavior": {
      "type": "object",
      "description": "Device behavior definition",
      "properties": {
        "name": {
          "type": "string",
          "description": "Behavior name"
        },
        "trigger": {
          "$ref": "#/definitions/trigger"
        },
        "action": {
          "$ref": "#/definitions/action"
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether the behavior is enabled",
          "default": true
        }
      },
      "required": ["name", "trigger", "action"],
      "additionalProperties": false
    },
    "trigger": {
      "type": "object",
      "description": "Trigger condition for a behavior",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of trigger",
          "enum": ["event", "schedule", "condition", "startup"]
        },
        "event": {
          "type": "string",
          "description": "Event name for event triggers"
        },
        "schedule": {
          "type": "string",
          "description": "Cron expression for scheduled triggers"
        },
        "condition": {
          "type": "string",
          "description": "Expression for condition triggers"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "action": {
      "type": "object",
      "description": "Action to execute when triggered",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of action",
          "enum": ["publish", "disconnect", "reconnect", "setState", "log", "custom"]
        },
        "topic": {
          "type": "string",
          "description": "Topic for publish action"
        },
        "payload": {
          "description": "Payload for publish action"
        },
        "state": {
          "type": "object",
          "description": "State changes for setState action",
          "additionalProperties": true
        },
        "duration": {
          "type": "integer",
          "description": "Duration in milliseconds for disconnect action"
        },
        "message": {
          "type": "string",
          "description": "Message for log action"
        },
        "handler": {
          "type": "string",
          "description": "Python module path for custom action"
        },
        "params": {
          "type": "object",
          "description": "Additional parameters",
          "additionalProperties": true
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
