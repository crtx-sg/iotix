{
  "name": "iotix",
  "version": "0.1.0",
  "description": "Open-source IoT device simulation platform for testing at scale",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "docker:build": "docker compose -f deploy/docker/docker-compose.yml build",
    "docker:up": "docker compose -f deploy/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f deploy/docker/docker-compose.yml down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iotix/iotix.git"
  },
  "license": "Apache-2.0",
  "keywords": [
    "iot",
    "simulation",
    "testing",
    "mqtt",
    "coap",
    "device-virtualization",
    "load-testing"
  ]
}
