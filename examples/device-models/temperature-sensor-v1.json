{
  "id": "temperature-sensor-v1",
  "name": "Temperature Sensor",
  "description": "Basic temperature sensor with random telemetry",
  "version": "1.0.0",
  "type": "sensor",
  "protocol": "mqtt",
  "connection": {
    "broker": "mqtt-broker",
    "port": 1883,
    "topicPattern": "sensors/{deviceId}/temperature",
    "qos": 1,
    "keepAlive": 60
  },
  "telemetry": [
    {
      "name": "temperature",
      "type": "number",
      "unit": "celsius",
      "intervalMs": 5000,
      "generator": {
        "type": "random",
        "min": 18.0,
        "max": 28.0,
        "distribution": "normal",
        "mean": 22.0,
        "stddev": 2.0
      }
    },
    {
      "name": "humidity",
      "type": "number",
      "unit": "percent",
      "intervalMs": 5000,
      "generator": {
        "type": "random",
        "min": 30.0,
        "max": 70.0,
        "distribution": "normal",
        "mean": 50.0,
        "stddev": 10.0
      }
    }
  ],
  "metadata": {
    "manufacturer": "IoTix",
    "category": "environmental"
  }
}
